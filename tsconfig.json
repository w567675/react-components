{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitThis": true,
        "target": "es5",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}

